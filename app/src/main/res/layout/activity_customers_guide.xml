<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.weinner.liron.happygardener.CustomersActivity">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/relative_layout_to_dim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@color/blacked_screen">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:theme="@style/myTheme1.AppBarOverlay">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:background="@color/toolbar_green"
                android:theme="@style/myTheme1.AppBarOverlay"/>
        </android.support.design.widget.AppBarLayout>
        <FrameLayout
            android:id="@+id/framelayout_background"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintTop_toBottomOf="@id/appbar"
            android:background="@drawable/forest1">
        </FrameLayout>
    </android.support.constraint.ConstraintLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="90dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_sign_out"
        android:visibility="invisible"
        app:backgroundTint="@android:color/holo_red_dark"
        android:tint="@android:color/white"
        app:fabSize="mini" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_parts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="150dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_parts"
        android:visibility="invisible"
        app:backgroundTint="@color/app_green"
        android:tint="@android:color/white"
        app:fabSize="mini" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_add"
        app:fabSize="normal"
        app:backgroundTint="@color/my_add_fab_color"
        android:tint="#ffffff" />
    <TextView
        android:id="@+id/textView_add_customer_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="70dp"
        android:fontFamily="@font/heebo_bold"
        android:text="@string/short_press_button"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="7dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_arrow" />
</android.support.constraint.ConstraintLayout>
